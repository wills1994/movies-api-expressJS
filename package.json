{
  "name": "movies-api",
  "version": "1.0.0",
  "description": "expressjs api",
  "main": "index.js",
  "scripts": {
    "dev": "set DEBUG=app:* && set NODE_ENV=development &&  nodemon index",
    "start": "SET NODE_ENV=production  && nodemon index",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && start coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wills1994/movies-api-expressJS.git"
  },
  "keywords": [
    "movies-api"
  ],
  "author": "WILSON PINTO DSOUZA",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/joi": "^17.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-slash": "^2.0.1",
    "helmet": "^3.22.0",
    "mocha": "^7.1.1",
    "mongodb": "^3.5.4",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "proxyquire": "^2.1.3",
    "rotating-file-stream": "^2.0.2",
    "sinon": "^9.0.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "git add"
    ]
  },
  "nyc": {
    "all": true,
    "include": ["routes", "services", "lib", "utils"]
  }
}
